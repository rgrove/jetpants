<!DOCTYPE html>
<html class="entry" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=utf-8">
  <title>Jetpants Search</title>
  <link rel="stylesheet" type="text/css" href="<%== @config['resources']['jetpants-search']['css'] %>">
</head>
<body role="document">

<div class="loading" id="doc">
  <div id="hd">
    <%= erubis(:'partial/searchbox') %>
    <div class="info" role="status"><p class="loading">Loading...</p></div>
  </div>

  <div id="bd">
    <div id="results" role="main"></div>
  </div>

  <div id="ft" role="contentinfo">
    <%= erubis(:'partial/copyright') %>
  </div>
</div>

<script src="<%== @config['resources']['jetpants-search']['js'] %>"></script>
<script>
  var Y = YUI({fetchCSS:false, bootstrap: false}).use('jetpants-search', function (Y) {
    (new Y.Jetpants.Search({
      contentBox: '#doc',
      templates: <%= @templates %>
    })).render();
  });
</script>

</body>
</html>
